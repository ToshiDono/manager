<div class="row">
  <div class="col-sm-24 col-md-24">
    <div class="thumbnail">
      <div class="caption">
        <h3><%=	@doctor.surname_name %> <%=	@doctor.patronymic %></h3>
        <p>Телефон: <%= @doctor.phone %></p>
        <p>Email: <%= @doctor.email %></p>
        <p>
          <%= link_to 'Назад', doctors_path, class: 'btn btn-primary btn-m' %>
          <%= render 'changing_links', id: @doctor.id %>
        </p>
      </div>
      <div class="thumbnail">
        <div class="caption">
          <div class="panel-heading">
            <div role="presentation">Категория:</div>
            <div  class="list-group">
              <% @doctor.grades.each do |grade| %>
                  <div class="list-group-item"><%=grade.title %></div>
              <% end %>
            </div>
          </div>
        </div>

        <div class="caption">
          <div class="panel-heading">
            <div role="presentation">Специализация:</div>
            <div  class="list-group">
              <% @doctor.specializations.each do |specialization| %>
                  <div class="list-group-item"><%=specialization.title %></div>
              <% end %>
            </div>
          </div>
        </div>

        <div class="caption">
          <div class="panel-heading">
            <div role="presentation">Клиники, в которых работает врач:</div>
            <div  class="list-group">
              <% @doctor.clinics.each do |clinic| %>
                  <div class="list-group-item"><%=clinic.title %></div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>