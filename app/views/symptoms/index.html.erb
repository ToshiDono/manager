<div class="panel panel-default">
  <div class="panel-body">
    <%= link_to "#{t('actions.create')} #{t('symptoms.form.symptom')}", new_symptom_path, class: 'btn btn-success' %>
  </div>
  <div  class="list-group">
    <% @symptoms.each do |symptom| %>
        <div class="list-group-item">
          <div class="row">
            <div class="col-sm-4 col-md-8">
              <%= link_to symptom.title, symptom_path(symptom.id) %>
            </div>
            <div class="col-sm-4 col-md-4 text-right">
              <%= render 'changing_links', id: symptom.id %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
