<div class="thumbnail">
  <div class="caption">
    <h3><%= @symptom.pages_title %> симптом</h3>
    <%= simple_form_for @symptom do |f| %>
        <%= f.input :title, label: 'Название симптома' %>
        <%= f.input :description, label: 'Описание симптома', as: :text %>
        <%= f.association :diseases, as: :check_boxes %>
        <%= f.button :submit, 'Сохранить' %>
    <% end %>
  </div>
</div>