<div class="thumbnail">
  <div class="caption">
    <h3><%= @symptom.pages_title %> <%= t('symptoms.form.symptom') %></h3>
    <%= simple_form_for @symptom do |f| %>
        <%= f.input :title %>
        <%= f.input :description, as: :text %>
        <%= f.association :diseases, as: :check_boxes %>
        <%= f.button :submit, t('actions.save') %>
    <% end %>
  </div>
</div>