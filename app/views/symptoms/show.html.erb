<div class="row">
  <div class="col-sm-24 col-md-24">
    <div class="thumbnail">
      <div class="caption">
        <h3><%=	@symptom.title %></h3>
        <p><%= @symptom.description.inspect %></p>
        <p>
          <%= link_to 'Назад', symptoms_path, class: 'btn btn-primary btn-m' %>
          <%= link_to 'Изменить', edit_symptom_path(@symptom.id), class: 'btn btn-default btn-m' %>
          <%= link_to 'Удалить',
                      symptom_path(@symptom.id),
                      method: :delete,
                      data: { confirm: 'Вы уверены?' },
                      class: 'btn btn-danger btn-m' %>
        </p>
      </div>
      <div class="thumbnail">
        <div class="caption">
          <div class="panel-heading">
              <div role="presentation">Болезни, присущие симптому:</div>
            <div  class="list-group">
              <% @symptom.diseases.each do |disease| %>
                  <div class="list-group-item"><%=disease.title %></div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>